FROM eclipse-temurin:17-jdk AS build

# Définit le répertoire de travail
WORKDIR /app

# Copie tout le projet dans le conteneur
COPY . .

# Assurez-vous que le script mvnw est exécutable
RUN chmod +x mvnw

# Compile le projet avec Maven
RUN ./mvnw clean package -DskipTests

# Étape finale : création de l'image d'exécution
FROM eclipse-temurin:17-jdk

WORKDIR /app

# Copie le fichier JAR généré depuis l'étape de build
COPY --from=build /app/target/*.jar app.jar

# Expose le port 8080
EXPOSE 8080

# Commande pour démarrer l'application
CMD ["sh", "-c", "java -jar app.jar --server.port=${PORT}"]

